<odoo>
  <data>
    <record id="crm_custom_res_partner_inherit_form" model="ir.ui.view">
      <field name="name">crm.custom.res.partner.inherit.form</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form" />
      <field name="arch" type="xml">
        <xpath expr="//field[@name='name']" position="attributes">
          <attribute name="readonly">1</attribute>
        </xpath>
        <xpath expr="//field[@name='ref']" position="attributes">
          <attribute name="readonly">1</attribute>
        </xpath>
        <xpath expr="//field[@name='title']" position="attributes">
          <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//div[@class='oe_title mb24']" position="after">
          <div id="partner_name" class="oe_row" attrs="{ 'invisible':[('is_company','=',True)]}" >
            <label for="first_name" string="First/Last Name" attrs="{ 'invisible':[('is_company','=',True)]}" />
            <field name="title" placeholder="Title" attrs="{ 'invisible':[('is_company','=',True)]}" />
            <field name="first_name" placeholder="First Name" attrs="{ 'invisible':[('is_company','=',True)]}" />
            <field name="middle_name" placeholder="Middle Name" attrs="{ 'invisible':[('is_company','=',True)]}" />
            <field name="last_name" placeholder="Last Name" attrs="{ 'invisible':[('is_company','=',True)]}" />
          </div>
        </xpath>
        <xpath expr="//page[@name='internal_notes']" position="before">
          <page string="Bio Data" name="pg_bio_data" >
            <group>
              <group>
                <field name="gender"/>
                <field name="date_of_birth"/>
                <field name="age"/>
              </group>
              <group>
                <field name="gender"/>
                <field name="national_id"/>
                <field name="passport_id"/>                
              </group>
            </group>
            
          </page>
          <page string="Next of Kin" name="pg_next_of_kin" >            
            <field name="next_of_kin_ids" mode="tree" string="Next of Kin" 
            domain="[('company_id', '=', company_id)]"
            />
          </page>
        </xpath>
      </field>
    </record>

